{
    "name": "Chrome Web Themer",
    "version": "0.6.2",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "128": "images/chrome_web_themer_icon.png"
    },
    "default_locale": "en",
    "sandbox": {
      "pages": ["scripts/context_menu.html"]
    },
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "scripts/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
        "run_at": "document_end",
        "matches": ["http://*/*", "https://*/*"],
        "js": ["scripts/jscolor.min.js", "scripts/contentscript.js"],
        "css": ["styles/inject.css"],
        "all_frames": true
    }],
    "web_accessible_resources": ["scripts/context_menu.html", "scripts/jscolor.min.js", "scripts/contentscript.js", "styles/inject.css"],
    "permissions": [
        "tabs",
        "background",
        "http://*/*",
        "https://*/*",
        "activeTab",
        "webNavigation",
        "alarms",
        "storage"
    ],
    "browser_action": {
        "default_icon": {
            "128": "images/chrome_web_themer_icon.png"
        },
        "default_title": "Chrome Web Themer",
        "default_popup": "popup.html",
        "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
    }
}
